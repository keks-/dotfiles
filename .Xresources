! DarkMagenta = color5 + Magenta  = color13
! DarkCyan    = color6 + Cyan     = color14
! LightGrey   = color7 + White    = color15

! fonts {{{
! # defines
!#define FONT_NORMAL -*-erusfont-medium-r-*-*-*-*-*-*-*-*-*-*
!#define FONT_BOLD -*-erusfont-bold-r-*-*-*-*-*-*-*-*-*-*
!#define FONT_NORMAL -*-termsyn-medium-r-*-*-14-*-*-*-*-*-*-*
!#define FONT_NORMAL -*-termsyn-medium-r-*-*-14-*-*-*-*-*-*-*
!#define FONT_NORMAL xft:terminus:pixelsize=11
!#define FONT_BOLD xft:terminus:pixelsize=11:bold
!#define FONT_NORMAL xft:proggyclean:pixelsize=11
!#define FONT_BOLD xft:proggyclean:pixelsize=11
!#define FONT_ITALIC -nil-profont-medium-r-normal--10-100-72-72-c-50-iso8859-1
!#define FONT_BOLDITALIC -windows-montecarlo-bold-r-normal--11-110-72-72-c-60-microsoft-cp1252
!#define FONT_NORMAL xft:DejaVu Sans Mono:pixelsize=11
!#define FONT_BOLD xft:DejaVU Sans Mono:pixelsize=11:bold
#define FONT_NORMAL xft:Termsyn:pixelsize=14
#define FONT_BOLD xft:Termsyn:pixelsize=14:bold
!#define FONT_NORMAL xft:Source Code Pro:pixelsize=12
!#define FONT_BOLD xft:Source Code Pro:pixelsize=12:bold


!}}}
! vte {{{
  vte*font: FONT_NORMAL
  vte*boldFont: FONT_BOLD
  vte*italicFont: FONT_ITALIC
  vte*background: #121212
  vte*foreground: #d6d6d6
  vte*scrollBar: false
!}}}
! vim {{{
vim*font: FONT_NORMAL
vim*boldFont: FONT_BOLD
vim*italicFont: FONT_ITALIC
vim*boldItalicFont: FONT_BOLDITALIC
vim*background: #121212
vim*foreground: #d6d6d6
vim*scrollBar: false
!}}}

! colors {{{
#include "/home/keks/.config/xcolors/tango"
!#include "/home/keks/.config/xcolors/solarized"
!URxvt.background: #030303
!URxvt.cursorColor2: #252525
!URxvt.cursorColor: #eb122e
!URxvt.foreground: #ffffff
URxvt.fading: 0
!}}}

URxvt.font: FONT_NORMAL
URxvt.boldFont: FONT_BOLD
URxvt.italicFont: FONT_ITALIC
URxvt.boldItalicFont: FONT_BOLDITALIC
URxvt*boldItalicFont: xft:fixed:antialias=true:hinting=true:hintstyle=hintslight
URxvt.termName: 			rxvt-256color

/* matches */
URxvt.underlineURLs:        false
!URxvt.urlLauncher:          /usr/bin/firefox
URxvt.urlLauncher: urxvt-link.sh
URxvt.url-select.launcher: urxvt-link.sh
URxvt.url-select.underline: true
!URxvt.matcher.button:       1
URxvt.cutchars:             "()*,<>[]{}|'"
!URxvt.matcher.pattern.1:    \\bwww\\.[\\w-]+\\.[\\w./?&@#-]*[\\w/-]
!URxvt.matcher.launcher.1:   /usr/bin/firefox
Urxvt.matcher.launcher.1:    urxvt-link.sh
URxvt.matcher.pattern.2:    \\B(/\\S+?):(\\d+)(?=:|$)
URxvt.matcher.launcher.2:   gvim +$2 $1
URxvt.matcher.rend.0: Uline Bold fg8 bg1

/* libs */
URxvt.keysym.M-u:           perl:url-select:select_next
URxvt.perl-ext:             default,url-select
URxvt.perl-lib:             /usr/lib/urxvt/perl
URxvt.perl-ext-common:      default,matcher
URxvt.perl-eval:            $^O

/* perl magic */
URxvt.letterSpace: 0
URxvt.selection.pattern-0:        ( at .*? line \\d+[,.])
URxvt.selection-autotransform.0:  s/^ at (.*?) line (\\d+)[,.]$/:e \\Q$1\E\\x0d:$2\\x0d/

/* terminal stuff */
URxvt.jumpScroll: true
URxvt.loginShell: true
URxvt.saveLines: 1048586
URxvt.scrollBack: true
URxvt.scrollKey: true
URxvt.scrollTtyKeypress: true
URxvt.scrollTtyOutput: false
URxvt.scrollWithBuffer: true
URxvt.skipScroll: true
URxvt.trippleclickwords: true
URxvt.urgentOnBell: true

URxvt.chdir: /home/keks
URxvt.pasteableTabs: true
URxvt.pointerBlank: true
URxvt.pointerBlankDelay: 2
URxvt.scrollstyle: next

/* eyecandy */
URxvt.scrollBar: false
URxvt.depth: 32

UXTerm*font: 9x15

!*font: xft:Dina:size=11
!*boldFont: xft:Dina:size=11:bold

/* leaving urxvt country */

/* cursor settings */
Xcursor*theme: Vanilla-DMZ-AA
!Xcursor*theme: Vanilla-DMZ
Xcursor*size: 24

/* Xft settings */
!Xft*dpi: 96x96
! Xft*antialias: true
!Xft*rgba: rgb
!Xft*hinting: true
!Xft*hinstyle: hintsfull
!Xft.autohint: false
!
Xft.dpi: 96
Xft.antialias: true
Xft.hinting: true
Xft.hintstyle: hintfull
Xft.lcdfilter: none
Xft.rgba: rgb

! vim: set fdm=marker et sw=2 tw=0:
