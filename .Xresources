! Black       = color0 + DarkGray = color8
! DarkRed     = color1 + Red      = color9
! DarkGreen   = color2 + Green    = color10
! DarkYellow  = color3 + Yellow   = color11
! DarkBlue    = color4 + Blue     = color12
! DarkMagenta = color5 + Magenta  = color13
! DarkCyan    = color6 + Cyan     = color14
! LightGrey   = color7 + White    = color15

! fonts {{{
# defines
#if WIDTH < 60
#define FONT -xos4-terminus-medium-r-normal--22-220-72-72-c-110-koi8-u
#else
#define FONT -*-erusfont-medium-r-*-*-*-*-*-*-*-*-*-*
#endif

#define FONT_B -*-erusfont-bold-r-*-*-*-*-*-*-*-*-*-*
#define FONT_I -nil-profont-medium-r-normal--10-100-72-72-c-50-iso8859-1
#define FONT_I_B -windows-montecarlo-bold-r-normal--11-110-72-72-c-60-microsoft-cp1252

#define PROFONT_HUGE -nil-profont-medium-r-normal--29-290-72-72-c-160-iso8859-1
#define TERMINUS_HUGE -xos4-terminus-medium-r-normal--28-280-72-72-c-140-koi8-u
!}}}

! vim {{{
vim*background: #121212
vim*boldFont: FONT_B
vim*font: -xos4-terminus-medium-r-normal--0-0-72-72-c-0-koi8-u, FONT
vim*foreground: #d6d6d6
vim*italicFont: FONT_I
vim*scrollBar: false
!}}}

! colors {{{
#include "/home/keks/.xcolors/dmz"
URxvt.background: #121212
URxvt.borderColor: #0E0E0E
URxvt.colorBD: #FFFFFF
URxvt.colorIT: #FFFFFF
URxvt.colorRV: #333333
URxvt.colorUL: #FF8F00
URxvt.cursorColor2: #252525
URxvt.cursorColor: #EB122E
URxvt.foreground: #cacaca
URxvt.pointerColor2: #0092FF
URxvt.pointerColor: #252525
URxvt.underlineColor: #0E0E0E
!}}}

URxvt*font: FONT
URxvt*boldFont: FONT_B
URxvt.italicFont: FONT_I
URxvt*boldItalicFont: xft:fixed:antialias=true:hinting=true:hintstyle=hintslight
URxvt.termName: 			rxvt-256color

!URxvt*font: -schumacher-clean-medium-r-normal--10-100-75-75-c-50-iso646.1991-irv
!URxvt*boldFont: -fontforge-proggytinysz-bold-r-normal--10-80-96-96-c-60-iso8859-1

!URxvt*italicFont: -nil-profont-medium-r-normal--10-100-72-72-c-50-iso8859-1

/* matches */
URxvt.underlineURLs:        false
URxvt.urlLauncher:          /usr/bin/firefox
URxvt.matcher.button:       1
URxvt.cutchars:             "()*,<>[]{}|'"
URxvt.matcher.pattern.1:    \\bwww\\.[\\w-]+\\.[\\w./?&@#-]*[\\w/-]
URxvt.matcher.launcher.1:   /usr/bin/firefox
URxvt.matcher.pattern.2:    \\B(/\\S+?):(\\d+)(?=:|$)
URxvt.matcher.launcher.2:   gvim +$2 $1
URxvt.matcher.rend.0: Uline Bold fg8 bg1

/* libs */
URxvt.keysym.M-u: perl:mark-yank-urls:activate_mark_mode
URxvt.perl-ext: selection,mark-yank-urls
URxvt.perl-lib:             /usr/lib/urxvt/perl
URxvt.perl-ext-common:      default,matcher,autocomplete-ALL-the-things
URxvt.perl-eval:            $^O

/* perl magic */
URxvt.letterSpace: 0
URxvt.selection.pattern-0:        ( at .*? line \\d+[,.])
URxvt.selection-autotransform.0:  s/^ at (.*?) line (\\d+)[,.]$/:e \\Q$1\E\\x0d:$2\\x0d/

/* terminal stuff */
URxvt.jumpScroll: true
URxvt.loginShell: true
URxvt.saveLines: 1048586
URxvt.scrollBack: true
URxvt.scrollKey: true
URxvt.scrollTtyKeypress: true
URxvt.scrollTtyOutput: false
URxvt.scrollWithBuffer: true
URxvt.skipScroll: true
URxvt.trippleclickwords: true
URxvt.urgentOnBell: true

URxvt.chdir: /home/keks
URxvt.pasteableTabs: true
URxvt.pointerBlank: true
URxvt.pointerBlankDelay: 2
URxvt.scrollstyle: next

/* eyecandy */
URxvt.scrollBar: false
URxvt.depth: 32

!*font: xft:Dina:size=11
!*boldFont: xft:Dina:size=11:bold

/* leaving urxvt country */

/* cursor settings */
Xcursor*theme: Vanilla-DMZ-AA
!Xcursor*theme: Vanilla-DMZ
Xcursor*size: 24

/* Xft settings */
Xft*dpi: 96x96
! Xft*antialias: true
Xft*rgba: rgb
Xft*hinting: true
Xft*hinstyle: hintsfull
Xft.autohint: false
